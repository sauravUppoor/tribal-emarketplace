<html>
    <head>
        <title>
          Tribal | Empowering Tribes
          </title>
          <link  rel="stylesheet" href="resources/css/signup.css">
          <link href="https://fonts.googleapis.com/css?family=Lato:100,300,300i,400&display=swap" rel="stylesheet">
          <link href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css" rel="stylesheet">
          <link rel="stylesheet" type="text/css" href="vendors/css/normalize.css">
          <link rel="stylesheet" type="text/css" href="vendors/css/grid.css">
          <link rel="stylesheet" href="/public/signup-styles.css">
    </head>

        <body>
          <form  action="/customer-login" method="POST">
            <div class="login-wrap">
                <div class="login-html seller">
                 
                  <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab" >Customer Login</label>
                  <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
                 
                  <div class="login-form">
                    <div class="sign-in-htm">
                      <div class="group">
                        <label for="user" class="label">Username</label>
                        <input id="user" type="text" class="input" name="email">
                      </div>
                      <div class="group">
                        <label for="pass" class="label">Password</label>
                        <input id="pass" type="password" class="input" data-type="password" name="password">
                      </div>
                      <div class="group">
                        <input id="check" type="checkbox" class="check" checked>
                        <label for="check"><span class="icon"></span> Keep me Signed in</label>
                      </div>
                      <div class="group">
                        <!-- <a href="user.html" class="button">SIGN IN</a> -->
                        <button type="submit" class="button">LOGIN</button>
                      </div>
                      <div class="hr"></div>
                      <div class="foot-lnk">
                        <a href="#">Forgot Password?</a>
                      </div>
                    </div>
                    
                      
                  </div>
              </div>
            </div>
            </form>
        </body>
</html>
